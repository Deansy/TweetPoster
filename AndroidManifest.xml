<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
      package="com.cdeans.tweetposter"
      android:versionCode="1"
      android:versionName="1.0">

    <uses-permission android:name="android.permission.INTERNET" />
    <application android:label="@string/app_name" android:theme="@android:style/Theme.Holo.Dialog.NoActionBar" android:name=".OTweetApplication">
        <activity android:name=".activities.PostingActivity" android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".activities.AuthorizationActivity" android:theme="@android:style/Theme.Holo" android:label="Authorizing" />
    </application>
    <uses-sdk android:minSdkVersion="4" />
</manifest>
