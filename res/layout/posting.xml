<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:background="@drawable/tweet_backround">
        <TextView
                android:id="@+id/headingText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="TweetPoster"
                android:textColor="@android:color/black"
                android:textSize="20sp"
                android:layout_marginTop="20dip"
                android:layout_centerHorizontal="true"/>
        <Button
                android:id="@+id/closeBtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Close"
                android:textColor="@android:color/black"
                android:layout_marginTop="15dip"
                android:layout_alignParentLeft="true"
                android:layout_marginLeft="20dip"/>
        <Button
                android:id="@+id/tweetBtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Tweet"
                android:textColor="@android:color/black"
                android:layout_marginTop="15dip"
                android:layout_marginLeft="10dip"
                android:layout_toRightOf="@id/closeBtn"/>

        <EditText
                android:id="@+id/textBox"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text=""
                android:background="@null"
                android:textSize="25dip"
                android:textColor="@android:color/black"
                android:layout_marginTop="90dip"
                android:paddingLeft="20dip"
                android:paddingRight="20dip"
                android:gravity="top"
                android:lineSpacingExtra="25dip"
                android:lines="4"
                android:maxLines="4"
                android:maxLength="140"/>

    <TextView
            android:id="@+id/charCountText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="140"
            android:textColor="@android:color/black"
            android:textSize="20sp"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="20dip"
            android:layout_marginTop="330dip"/>


    </RelativeLayout>


